<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.exand_servico_despertador.CadastroHorarios"
    tools:ignore="MergeRootFrame" >

    <EditText
        android:id="@+id/edtHoraCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="time" />

    <Button
        android:id="@+id/btnSalvarHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtHoraCadastro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/btnSalvarHorario" />

</RelativeLayout>

